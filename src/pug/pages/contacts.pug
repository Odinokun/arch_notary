            form.contacts__form
              input(type="text" placeholder="Ваше призвище та имя*" required)
              input(type="text" placeholder="Ваш телефон*" required)
              input(type="mail" placeholder="Ваш email")
              textarea(rows="5" placeholder="Ваше питання до нотариуса...*" required)
